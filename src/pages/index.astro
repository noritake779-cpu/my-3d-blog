---
const response = await fetch(
  `https://${import.meta.env.MICROCMS_SERVICE_DOMAIN}.microcms.io/api/v1/blog`,
  {
    headers: { "X-MICROCMS-API-KEY": import.meta.env.MICROCMS_API_KEY },
  }
);
const data = await response.json();
---
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title>マイブログ</title>
  </head>
  <body style="font-family: sans-serif; padding: 20px; max-width: 800px; margin: 0 auto; background-color: #f4f7f6;">
    <h1 style="border-bottom: 2px solid #0070f3; padding-bottom: 10px;">記事一覧</h1>
    <ul style="list-style: none; padding: 0;">
      {data.contents.map((post: any) => (
        <li style="margin: 15px 0; padding: 15px; border: 1px solid #ddd; border-radius: 8px; background: white;">
          {post.title}
        </li>
      ))}
    </ul>
  </body>
</html>
